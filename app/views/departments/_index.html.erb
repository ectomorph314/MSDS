<div class='row'>
  <div class='small-12 columns'>
    <ul class='tabs' data-tab data-options="scroll_to_content: false">
      <% @departments.each do |department| %>
        <li class='tab-title active'><a href='#department<%= department.id %>'><%= department.name %></a></li>
      <% end %>
    </ul>
    <div class='tabs-content'>
      <% @departments.each do |department| %>
        <div class='content active' id='department<%= department.id %>'>
          <% if current_user.role == 'admin' || current_user.role == 'owner' %>
            <div class='row'>
              <div class='small-12 columns'>
                <ul class='button-group round'>
                  <li><%= link_to 'Edit Department', edit_company_department_path(params[:id], department), class: 'tiny button' %></li>
                  <li><%= link_to 'Delete Department', company_department_path(params[:id], department), data: { confirm: 'Are you sure?' }, method: :delete, class: 'tiny button' %></li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if current_user.admin_access?(params[:id]) %>
  <div class='row'>
    <div class='small-12 columns'>
      <%= link_to 'Add New Department', new_company_department_path(@company) %>
    </div>
  </div>
<% end %>
