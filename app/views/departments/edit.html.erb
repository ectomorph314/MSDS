<div class='row'>
  <div class='small-12 columns'>
    <h2>Update Deparment</h2>
  </div>
</div>

<%= form_for [@company, @department], html: {multipart: true} do |f| %>
  <div class='row'>
    <div class='small-12 columns'>
      <%= f.label :name %>
    </div>
  </div>
  <div class='row'>
    <div class='small-12 columns'>
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class='row'>
    <div class='small-12 columns'>
      <%= f.submit 'Update', class: 'small button radius' %>
    </div>
  </div>
<% end %>
