<div class='row'>
  <div class='small-12 columns'>
    <h3>Safety Data Sheets</h3>
  </div>
</div>

<% @data_sheets.each do |data_sheet| %>
  <p>
    <div class='row'>
      <div class='small-12 medium-6 large-3 columns'>
        <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.number %></a>
      </div>
      <div class='small-12 medium-6 large-3 columns'>
        <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.name %></a>
      </div>
      <% if current_user.admin_access?(params[:id]) || current_user.role == 'owner' %>
        <div class='small-12 medium-6 large-3 columns'>
          <%= link_to 'Edit Data Sheet', edit_company_data_sheet_path(params[:id], data_sheet), class: 'tiny button radius' %>
        </div>
        <div class='small-12 medium-6 large-3 columns'>
          <%= link_to 'Delete Data Sheet', company_data_sheet_path(params[:id], data_sheet), data: { confirm: 'Are you sure?' }, method: :delete, class: 'tiny button radius' %>
        </div>
      <% end %>
    </div>
  </p>
<% end %>

<div class='row'>
  <div class='small-12 columns'>
    <% if current_user.role == 'admin' %>
      <p><%= link_to 'Add a New Data Sheet', new_company_data_sheet_path(params[:id]) %></p>
    <% end %>
  </div>
</div>
