<div class='row'>
  <div class='small-12 columns'>
    <h2>Safety Data Sheets</h2>
  </div>
</div>

<% @data_sheets.each do |data_sheet| %>
  <p>
    <div class='row'>
      <div class='small-12 medium-6 large-3 columns'>
        <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.number %></a>
      </div>

      <div class='small-12 medium-6 large-3 columns'>
        <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.name %></a>
      </div>

      <div class='small-12 medium-6 large-3 columns'>
        <%= link_to 'Edit Data Sheet', edit_company_data_sheet_path(params[:company_id], data_sheet) %>
      </div>
      <div class='small-12 medium-6 large-3 columns'>
        <%= link_to 'Delete Data Sheet', company_data_sheet_path(params[:company_id], data_sheet), data: { confirm: 'Are you sure?' }, method: :delete %>
      </div>
    </div>
  </p>
<% end %>

<div class='row'>
  <div class='small-12 columns'>
    <p><%= link_to 'Add a New Data Sheet', new_company_data_sheet_path(params[:company_id]) %></p>
  </div>
</div>
