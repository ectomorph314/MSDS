<div class='row'>
  <div class='small-12 columns'>
    <h2>Safety Data Sheets</h2>
  </div>
</div>

<ul>
  <% @data_sheets.each do |data_sheet| %>
    <div class='row'>
      <div class='small-12 columns'>
        <li>
          <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.name %></a>
          <%= data_sheet.description %>
          <%= link_to 'Edit Data Sheet', edit_company_data_sheet_path(params[:company_id], data_sheet.id) %>
        </li>
      </div>
    </div>
  <% end %>
</ul>
