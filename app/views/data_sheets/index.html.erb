<div class='row'>
  <div class='small-12 columns'>
    <h2>Safety Data Sheets</h2>
  </div>
</div>

<% @data_sheets.each do |data_sheet| %>
  <div class='row'>
    <div class='small-3 columns'>
      <a href=<%= "#{data_sheet.sds}" %>><%= data_sheet.name %></a>
    </div>
    <div class='small-3 columns'>
      <%= data_sheet.description %>
    </div>
    <div class='small-3 columns'>
      <%= link_to 'Edit Data Sheet', edit_company_data_sheet_path(params[:company_id], data_sheet) %>
    </div>
    <div class='small-3 columns'>
      <%= link_to 'Delete Data Sheet', company_data_sheet_path(params[:company_id], data_sheet), method: :delete %>
    </div>
  </div>
<% end %>

<div class='row'>
  <div class='small-12 columns'>
    <%= link_to 'Add a New Data Sheet', new_company_data_sheet_path(params[:company_id]) %>
  </div>
</div>
