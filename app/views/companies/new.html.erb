<div class='row'>
  <div class='small-12 columns'>
    <h2>Register Company</h2>
  </div>
</div>

<%= form_for @company do |f| %>
  <div class='row'>
    <div class='small-12 columns'>
      <%= f.label :name %>
    </div>
  </div>
  <div class='row'>
    <div class='small-12 columns'>
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class='row'>
    <div class='small-12 columns'>
      <%= f.submit 'Submit', class: 'small button radius' %>
    </div>
  </div>
<% end %>
