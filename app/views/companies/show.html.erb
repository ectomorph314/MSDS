<div class='row'>
  <div class='small-12 columns'>
    <h2><%= @company.name %></h2>
  </div>
</div>

<% if current_user.role == 'admin' || current_user.role == 'owner' %>
  <div class='row'>
    <div class='small-12 medium-6 columns'>
      <p><%= link_to 'Edit Company', edit_company_path %></p>
    </div>
    <div class='small-12 medium-6 columns'>
      <p><%= link_to 'Delete Company', company_path, data: { confirm: 'Are you sure?' }, method: :delete %><p>
    </div>
  </div>
<% end %>

